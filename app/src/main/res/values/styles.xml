<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/startscreen_settings</item>
    </style>

    <style name="HomeScreenTheme" parent="Theme.AppCompat.NoActionBar">

    </style>


    <style name="HomeScreen" parent="AppTheme">
        <item name="android:background">@drawable/startbackground</item>
    </style>


    <style name="Activities" parent="AppTheme">
        <item name="android:background" >@drawable/startbackground</item>
    </style>

    <style name="ControlGroupLayout" parent="AppTheme">
        <item name="android:background">@color/ControlGroupBackground</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:padding">5dp</item>

    </style>


    <style name="ControlGroupTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:color">@color/ControlGroupTitle</item>
    </style>

    <style name="ControlGroupDivider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/ControlGroupTitleDevider</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="ControlGroupItem">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="ControlGroupItemText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ControlGroupItemIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@string/imageContentDescription</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="StartScreen_Image">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="StartScreen_box">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/startmenu_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:orientation">vertical</item>
    </style>






</resources>
